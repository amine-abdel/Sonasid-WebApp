@model Sonacid.Models.H_V

@{
    ViewData["Title"] = "Delete";
}

<section class="section">
    <h1 class="section-header">
        Hauteur des verrous
    </h1>

    <div class="section-body">
        <div class="container py-4">
            <header class="pb-3 mb-4 border-bottom">
                <h4 class="d-flex align-items-center text-dark text-decoration-none">
                    <img src="~/img/oie.gif" widt="64" height="64" />
                    <span class="fs-4">Êtes-vous sûr de vouloir supprimer ce?</span>
                </h4>
            </header>

            <div class="p-5 mb-4 card rounded-3 ">
                <div class="container-fluid py-5 ">

                    <table class="table table-bordered table-striped table-hover text-center ">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Diametre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mesures);
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Min);
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Max)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cible)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Poste)
                                </th>
                                
                            </tr>
                        </thead>
                        <tbody class="table-warning">
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Diametre)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Mesures)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Min)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Max)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Cible)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Poste)
                                </td>
                                
                            </tr>

                        </tbody>
                    </table>
                    <form asp-action="Delete">
                        <button class="btn btn-danger btn-sm" type="submit">confirmer la suppression</button>
                        <a asp-action="Index" class="btn btn-outline-info btn-sm">retour à la liste</a>
                    </form>


                </div>
            </div>

        </div>
    </div>
</section>